	Journal_Long = {Genetics},
	Keywords = {Hill-Robertson effect, recombination, evolution of recombination, stochastic models},
	Number = {3},
	Pages = {1793--1811},
	Title = {The {Hill-Robertson} Effect and the Evolution of Recombination},
	Url = {http://www.genetics.org/content/173/3/1793.abstract},
	Volume = {173},
	Year = {2006},
	Bdsk-Url-1 = {http://www.genetics.org/content/173/3/1793.abstract},
