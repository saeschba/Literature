	Journal_Long = {Molecular Ecology},
	Keywords = {hybridization, mixed modes of reproduction, next-generation sequencing, polyploidy},
	Number = {1},
	Pages = {40--69},
	Title = {Recent progress and challenges in population genetics of polyploid organisms: an overview of current state-of-the-art molecular and statistical tools},
	Url = {http://dx.doi.org/10.1111/mec.12581},
	Volume = {23},
	Year = {2014},
