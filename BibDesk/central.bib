	Journal = Genetics,
	Journal_Long = {Genetics},
	Keywords = {quasi-linkage equilibrium, natural selection, multilocus models, linkage, Wright's fitness landscape, Wright's adaptive topography, Fisher's fundamental theorem of natural selection},
	Number = {5},
	Pages = {875--890},
	Title = {Attainment of quasi linkage equilibrium when gene frequencies are changing by natural selection},
	Url = {http://www.genetics.org/content/52/5/875.short},
