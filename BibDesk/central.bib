	Journal = GenomeRes,
	Journal_Long = {Genome Research},
	Keywords = {speciation with gene flow, admixture timing, Heliconius, Heliconius melpomene, Heliconius cydno, Heliconius timareta, interspecific gene flow, Z chromosome, wing patterns, mimicry, hybrid incompatibility},
	Number = {11},
