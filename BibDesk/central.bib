	Keywords = {FST outliers, Mytilus, selection, hitchhiking, stepping-stone model},
	Number = {11},
	Pages = {3254--3272},
	Publisher = {Blackwell Publishing Inc},
	Title = {The distinctive footprints of local hitchhiking in a varied environment and global hichkiking in a subdivided population},
