	Keywords = {conservation genetics, domestication, hybridization, identity by descent, introgression, Sus scrofa},
	Number = {16},
	Pages = {4089--4102},
	Title = {Untangling the hybrid nature of modern pig genomes: a mosaic derived from biogeographically distinct and highly divergent \emph{{Sus scrofa}} populations},
	Url = {http://dx.doi.org/10.1111/mec.12807},
	Volume = {23},
