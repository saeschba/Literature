	Journal_Long = {Molecular Ecology},
	Keywords = {compound multinomial distribution; outlier analysis; population divergence; SNP discovery},
	Number = {3},
	Pages = {502--512},
	Title = {Next-generation sequencing for molecular ecology: a caveat regarding pooled samples},
	Ty = {JOUR},
