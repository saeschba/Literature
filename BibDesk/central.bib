	Keywords = {admixture, Canis, diagnostic markers, hybridization, single-nucleotide polymorphism, diagnostic markers},
	Number = {1},
	Pages = {182--197},
	Title = {Assessment of coyote--wolf--dog admixture using ancestry-informative diagnostic SNPs},
	Url = {http://dx.doi.org/10.1111/mec.12570},
	Volume = {23},
	Year = {2014},
