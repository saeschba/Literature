@article{Fagny:2014zr,
	Annote = {10.1093/molbev/msu118},
	Author = {Fagny, Maud and Patin, Etienne and Enard, David and Barreiro, Luis B. and Quintana-Murci, Lluis and Laval, Guillaume},
