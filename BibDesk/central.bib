	Journal = MolEcol,
	Journal_Long = {Molecular Ecology},
	Keywords = {adaptation, hybridization, mutation, standing variation, trans-species polymorphism, standing genetic variation, de-novo mutation, adaptive introgression},
	Number = {18},
	Pages = {4606--4618},
	Title = {Adaptive introgression in animals: examples and comparison to new mutation and standing variation as sources of adaptive variation},
	Url = {http://dx.doi.org/10.1111/mec.12415},
	Volume = {22},
	Year = {2013},
