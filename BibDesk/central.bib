	Number = {1},
	Pages = {321--338},
	Title = {A Principled Approach to Deriving Approximate Conditional Sampling Distributions in Population Genetics Models with Recombination},
	Url = {http://www.genetics.org/content/186/1/321.abstract},
	Volume = {186},
