	Journal_Long = {Molecular Ecology Resources},
	Keywords = {BayesAss, Markov chain Monte Carlo, Migration, Convergence, assignment tests, microsatellites},
	Pages = {n/a--n/a},
	Title = {Non-convergence in Bayesian estimation of migration rates},
	Url = {http://dx.doi.org/10.1111/1755-0998.12216},
	Year = {2013},
