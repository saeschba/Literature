	Keywords = {Wright-Fisher model, non-homogenous hidden Markov model, fluctuating selection, Bayesian data analysis, genome scan},
	Pages = {n/a--n/a},
	Title = {Bayesian inference of selection in a heterogeneous environment from genetic time-series data},
	Url = {http://dx.doi.org/10.1111/mec.13323},
