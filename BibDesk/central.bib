	Keywords = {Adriatic, Barbus barbus, Barbus plebejus, biological invasions, introgressive hybridization, propagule pressure},
	Number = {21},
	Pages = {5295--5312},
	Title = {Massive invasion of exotic Barbus barbus and introgressive hybridization with endemic Barbus plebejus in Northern Italy: where, how and why?},
	Url = {http://dx.doi.org/10.1111/mec.12470},
	Volume = {22},
