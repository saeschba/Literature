	Journal_Long = {Evolution},
	Keywords = {Cline, gene flow, mammals, reproductive isolation, speciation},
	Number = {9},
	Pages = {2064--2078},
	Publisher = {Blackwell Publishing Ltd},
	Title = {Differential patterns of introgression accross the {X} chromosome in a hybrid zone between two species of house mice},
