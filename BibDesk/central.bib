	Date-Modified = {2015-01-22 17:29:47 +0000},
	Doi = {10.1093/molbev/msu320},
	Eprint = {http://mbe.oxfordjournals.org/content/32/2/495.full.pdf+html},
	Journal = MolBiolEvol,
	Journal_Long = {Molecular Biology and Evolution},
	Keywords = {experimental evolution, haplotype sequencing, long-range genetic hitchhiking, time series, standing genetic variation, selection on rare variants},
	Number = {2},
	Pages = {495-509},
	Title = {Patterns of Linkage Disequilibrium and Long Range Hitchhiking in Evolving Experimental Drosophila melanogaster Populations},
	Url = {http://mbe.oxfordjournals.org/content/32/2/495.abstract},
	Volume = {32},
