	Issn = {1365-294X},
	Journal = MolEcol,
	Journal_Long = {Molecular Ecology},
	Keywords = {amphidromy, fish, gene flow, island, morphology, selection, local adaptation, goby},
	Number = {3},
	Pages = {545--563},
	Title = {Local adaptation despite high gene flow in the waterfall-climbing {Hawaiian} goby, \emph{{Sicyopterus stimpsoni}}},
