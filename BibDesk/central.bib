	Keywords = {climate; divergent selection; FST--QST; phenotypic plasticity},
	Number = {3},
	Pages = {561--574},
	Title = {Local adaptation with high gene flow: temperature parameters drive adaptation to altitude in the common frog (\emph{{Rana temporaria}})},
