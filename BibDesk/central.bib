	Keywords = {genotyping by sequencing, parallel selection, pink salmon, population genomics, RAD},
	Number = {10},
	Pages = {2473--2485},
	Title = {Parallel signatures of selection in temporally isolated lineages of pink salmon},
	Url = {http://dx.doi.org/10.1111/mec.12769},
	Volume = {23},
	Year = {2014},
	Bdsk-Url-1 = {http://dx.doi.org/10.1111/mec.12769}}

@article{Coroian:2014kl,
	Abstract = {Both climatic and geographical factors play an important role for the biogeographical distribution of species. The Carpathian mountain ridge has been suggested as a natural geographical divide between the two honeybee subspecies Apis mellifera carnica and A. m. macedonica. We sampled one worker from one colony each at 138 traditional apiaries located across the Carpathians spanning from the Hungarian plains to the Danube delta. All samples were sequenced at the mitochondrial tRNALeu-cox2 intergenic region and genotyped at twelve microsatellite loci. The Carpathians had only limited impact on the biogeography because both subspecies were abundant on either side of the mountain ridge. In contrast, subspecies differentiation strongly correlated with the various temperature zones in Romania. A. m. carnica is more abundant in regions with the mean average temperature below $9^{\circ}$C, whereas A. m. macedonica honeybees are more frequent in regions with mean temperatures above $9^{\circ}$C. This range selection may have impact on the future biogeography in the light of anticipated global climatic changes.},
