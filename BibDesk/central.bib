	Journal = Genetics,
	Keywords = {genetic drift, linked selection, hitchhiking, selective sweep, partial sweep, recurrent sweep},
	Number = {1},
	Pages = {205--224},
	Title = {Patterns of Neutral Diversity Under General Models of Selective Sweeps},
	Url = {http://www.genetics.org/content/192/1/205.abstract},
	Volume = {192},
