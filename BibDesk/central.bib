	Journal = Genetics,
	Journal_Long = {Genetics},
	Keywords = {sequentially Markovian coalescent, recombination, conditional sampling distribution, hidden Markov model},
	Number = {4},
	Pages = {1115--1128},
	Title = {An Accurate Sequentially Markov Conditional Sampling Distribution for the Coalescent With Recombination},
	Url = {http://www.genetics.org/content/187/4/1115.abstract},
	Volume = {187},
	Year = {2011},
	Bdsk-Url-1 = {http://www.genetics.org/content/187/4/1115.abstract},
