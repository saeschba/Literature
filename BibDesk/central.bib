@article{OConnor:2015qq,
	Annote = {10.1093/molbev/msu326},
	Author = {O'Connor, Timothy D. and Fu, Wenqing and NHLBI GO Exome Sequencing Project and ESP Population Genetics and Statistical Analysis Working Group, Emily Turner and Mychaleckyj, Josyf C. and Logsdon, Benjamin and Auer, Paul and Carlson, Christopher S. and Leal, Suzanne M. and Smith, Joshua D. and Rieder, Mark J. and Bamshad, Michael J. and Nickerson, Deborah A. and Akey, Joshua M.},
