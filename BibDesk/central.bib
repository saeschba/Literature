	Keywords = {Selection; Migration; Recombination; Linkage disequilibrium; Population subdivision; Genetic architecture},
	M3 = {doi: 10.1016/j.tpb.2011.07.002},
	Number = {4},
	Pages = {272--288},
	Title = {The effects of linkage and gene flow on local adaptation: A two-locus continent--island model},
