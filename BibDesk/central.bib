	Keywords = {reintroduction, genetic drift, demographic history},
	Number = {24},
	Pages = {5046--5058},
	Publication-Type = {J},
	Times-Cited = {0},
	Title = {A strong genetic footprint of the re-introduction history of {A}lpine ibex (\emph{{C}apra ibex ibex})},
