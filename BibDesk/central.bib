	Keywords = {haplodiploid, hybridization, large X effect, speciation, unisexual inviability, unisexual sterility},
	Number = {20},
	Pages = {5200--5210},
	Title = {Biased introgression of mitochondrial and nuclear genes: a comparison of diploid and haplodiploid systems},
	Url = {http://dx.doi.org/10.1111/mec.13318},
	Volume = {24},
	Year = {2015},
