	Journal = MolBiolEvol,
	Journal_Long = {Molecular Biology and Evolution},
	Keywords = {codon usage bias, codon selection, speciation, recombination interference},
	Number = {12},
	Pages = {3669-3683},
	Title = {Ecological Adaptation in Bacteria: Speciation Driven by Codon Selection},
