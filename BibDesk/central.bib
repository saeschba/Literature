	Number = {24},
	Pages = {6131--6148},
	Title = {Detecting adaptive trait loci in nonmodel systems: divergence or admixture mapping?},
	Url = {http://dx.doi.org/10.1111/mec.12562},
	Volume = {22},
	Year = {2013},
