	Keywords = {Apis mellifera iberiensis, balancing selection, directional selection, FST outlier tests, genome scan, single nucleotide polymorphism},
	Number = {23},
	Pages = {5890--5907},
	Title = {Signatures of selection in the Iberian honey bee (\emph{{Apis mellifera iberiensis}}) revealed by a genome scan analysis of single nucleotide polymorphisms},
