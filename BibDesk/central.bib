	Keywords = {Evolutionarily stable strategy; Clonal; Diploid; Fitness; Structured metapopulation},
	Number = {4},
	Pages = {517--528},
	Title = {A novel fitness proxy in structured locally finite metapopulations with diploid genetics, with an application to dispersal evolution},
	Ty = {JOUR},
