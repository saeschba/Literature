	Issn = {1365-294X},
	Journal = MolEcol,
	Journal_Long = {Molecular Ecology},
	Keywords = {data synthesis, effect size, FST, meta-analyses, quantitative review, secondary analysis},
	Number = {16},
	Pages = {4042--4051},
	Title = {Formalizing the definition of meta-analysis in {Molecular Ecology}},
