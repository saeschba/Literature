	Keywords = {Ne, gene flow, inbreeding depression, metapopulation, model bias, model selection, population fragmentation, sample size, salmon},
	Number = {15},
	Pages = {3428--3447},
	Title = {Genetic estimates of contemporary effective population size: what can they tell us about the importance of genetic stochasticity for wild population persistence?},
	Ty = {JOUR},
