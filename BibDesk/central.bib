	Keywords = {evolutionary strata, Gasterosteus aculeatus, GC content, genetic diversity, pseudoautosomal region, RAD sequencing, sex chromosome, recombination},
	Number = {11},
	Pages = {3014--3027},
	Title = {Recombination in the threespine stickleback genome---patterns and consequences},
	Url = {http://dx.doi.org/10.1111/mec.12322},
	Volume = {22},
	Year = {2013},
