	Keywords = {g2, general-effect heterozygosity fitness correlations, inbreeding, multilocus heterozygosity, univariate meta-analysis},
	Number = {8},
	Pages = {1899--1909},
	Title = {Assessment of identity disequilibrium and its relation to empirical heterozygosity fitness correlations: a meta-analysis},
	Url = {http://dx.doi.org/10.1111/mec.12707},
	Volume = {23},
	Year = {2014},
