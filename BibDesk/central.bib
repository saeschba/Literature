	Doi = {10.1111/mec.13004},
	Issn = {1365-294X},
	Journal = MolEcol,
	Journal_Long = {Molecular Ecology},
	Keywords = {adaptive divergence, bulk segregant analysis, flowering time, QTL, stolons, pleiotropy, Mimulus guttatus, local adaptation},
	Number = {1},
	Pages = {111--122},
	Title = {The extent and genetic basis of phenotypic divergence in life history traits in Mimulus guttatus},
