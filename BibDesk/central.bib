	Journal_Long = {Molecular Ecology},
	Keywords = {Kewwords; Berthelot's pipit; Bottleneck; founder effect; microsatellite},
	Pages = {n/a--n/a},
	Title = {Genetic and phenotypic divergence in an island bird: isolation by distance, by colonisation or by adaptation?},
