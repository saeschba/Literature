	Journal = MolEcol,
	Journal_Long = {Molecular Ecology},
	Keywords = {sympatric speciation, recombination, hitchhiking, IM, F ST},
	Pages = {3133--3157},
	Title = {Reanalysis suggests that genomic islands of speciation are due to reduced diversity, not reduced gene flow},
	Url = {http://dx.doi.org/10.1111/mec.12796},
