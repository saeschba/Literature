	Journal = Genetics,
	Journal_Long = {Genetics},
	Keywords = {selective sweep, soft sweep, continuous population, partial sweep, characteristic length, wave of advance, parallel evolution},
	Number = {2},
	Pages = {647--668},
	Title = {Parallel Adaptation: {O}ne or Many Waves of Advance of an Advantageous Allele?},
