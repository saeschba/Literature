	Keywords = {adaptation, Arabidopsis thaliana, ecology, flowering time, selection},
	Number = {16},
	Pages = {4222--4240},
	Title = {Investigation of the geographical scale of adaptive phenological variation and its underlying genetics in {\emph{Arabidopsis thaliana}}},
