	Keywords = {genome scan; marine snail; null alleles; parallel phenotypic evolution; RAD sequencing; shared genomic divergence},
	Number = {1},
	Pages = {287--305},
	Title = {Shared and nonshared genomic divergence in parallel ecotypes of Littorina saxatilis at a local scale},
