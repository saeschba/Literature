	Keywords = {ecological speciation, endogenous barrier, Fst outliers, genetic incompatibilities, genetic--environment association, genome scan, hybrid zone, local adaptation},
	Number = {10},
	Pages = {2044--2072},
	Publisher = {Blackwell Publishing Ltd},
	Title = {The coupling hypothesis: why genome scans may fail to map local adaptation genes},
