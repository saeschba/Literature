	Journal = MolEcol,
	Journal_Long = {Molecular Ecology},
	Keywords = {ABC, demographic change, fish, rivers, source--sink dynamics, asymmetric gene flow},
	Number = {12},
	Pages = {3279--3291},
	Title = {The demographic history of populations experiencing asymmetric gene flow: combining simulated and empirical data},
	Url = {http://dx.doi.org/10.1111/mec.12321},
	Volume = {22},
	Year = {2013},
