	Keywords = {allele frequency cline, genotyping-by-sequencing, nonmodel, outlier, population genomics, RAD},
	Number = {11},
	Pages = {2971--2985},
	Title = {Adaptive evolution during an ongoing range expansion: the invasive bank vole (Myodes glareolus) in Ireland},
	Url = {http://dx.doi.org/10.1111/mec.12343},
	Volume = {22},
	Year = {2013},
