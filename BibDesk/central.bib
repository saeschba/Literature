	Journal_Long = {Molecular Ecology},
	Keywords = {footprints of selection; lateral plate; parallel evolution; population bottleneck; RAD sequencing},
	Number = {1},
	Pages = {238--259},
	Title = {The impact of selection, gene flow and demographic history on heterogeneous genomic divergence: three-spine sticklebacks in divergent environments},
	Ty = {JOUR},
	Url = {http://dx.doi.org/10.1111/mec.13399},
