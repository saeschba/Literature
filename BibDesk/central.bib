	Journal_Long = {Molecular Ecology},
	Keywords = {adaptation, conservation genetics, contemporary evolution, ecological genetics, genomics/proteomics},
	Number = {24},
	Pages = {5966--5968},
	Title = {Genomics and museum specimens},
	Url = {http://dx.doi.org/10.1111/mec.12563},
	Volume = {22},
