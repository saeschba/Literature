	Keywords = {climate change, gene flow, local adaptation, ocean acidification, population structure, RNA-Seq, Single Nucleotide Polymorphism discovery, transcriptome},
	Number = {11},
	Pages = {2884--2897},
	Title = {Transcriptome-wide polymorphisms of red abalone (Haliotis rufescens) reveal patterns of gene flow and local adaptation},
	Url = {http://dx.doi.org/10.1111/mec.12081},
	Volume = {22},
