	Issn = {0962-1083},
	Journal = MolEcol,
	Keywords = {heterozygosity, microsatellites, fitness, inbreeding, inbreeding depression, individual-based, linkage, heterosis},
	Number = {10},
	Pages = {3021--3031},
	Publication-Type = {J},
	Times-Cited = {76},
