	Journal = ProcRSocLondBiol,
	Journal_Long = {{Proceedings of the Royal Society B - Biological Sciences}},
	Keywords = {human evolution; Europe; Neolithic expansion; SNP; mismatch distribution; ascertainment bias},
	Month = {APR 7},
	Number = {1564},
	Pages = {679--688},
	Title = {The effect of the Neolithic expansion on European molecular diversity},
