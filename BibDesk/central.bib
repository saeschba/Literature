	Keywords = {connectivity, damicornis, dispersal, Pocillopora, population genetics, recruitment, long-distance dispersal},
	Number = {23},
	Pages = {5821--5834},
	Title = {Genetic assignment of recruits reveals short- and long-distance larval dispersal in \emph{{Pocillopora damicornis}} on the {Great Barrier Reef}},
